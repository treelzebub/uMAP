<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:clipToPadding="false"
    android:elevation="@dimen/el_high"
    android:padding="@dimen/margin_normal"
    auto:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/sel_darken"
        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardview_album_cover"
            android:layout_width="@dimen/cardview_album_cover"
            android:layout_height="@dimen/cardview_album_cover"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_small"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardview_artist"
                style="@style/Text.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />

            <TextView
                android:id="@+id/cardview_title"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
