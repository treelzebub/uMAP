<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.treelzebub.umap">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="net.treelzebub.umap.ui.MainActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth://umap.treelzebub.net"
                    android:scheme="oauth" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.treelzebub.umap.ui.LoginActivity"
            android:configChanges="keyboard|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <data
                    android:host="umap.treelzebub.net"
                    android:scheme="oauth" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.treelzebub.umap.ui.DashboardActivity"
            android:label="Home"
            android:theme="@style/AppTheme" />

    </application>
</manifest>
